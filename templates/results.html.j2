{% extends 'base.html.j2' %}

{% block head %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Color Results</title>
  <link rel="stylesheet" type="text/css" href="static/homestyle.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap">
{% endblock %}

{% block body %}
  <h1>Color Results</h1>

  Complementary Color Palette
  <div class="color-palette">  
    <div class="color-color">
    <div class="box1">
      <div class="color-box" style="background-color: rgb({{ color1[0] }}, {{ color1[1] }}, {{ color1[2] }})"></div>
      </div>
      <div class="boxend">
      <div class="color-box" style="background-color: rgb({{ color2[0] }}, {{ color2[1] }}, {{ color2[2] }})"></div>
     </div>
      </div>
  </div>
<br>
  Triadic Color Palette
  
  <div class="color-palette"> 
    <div class="color-color">
    <div class="box1">
      <div class="color-box" style="background-color: rgb({{ color1[0] }}, {{ color1[1] }}, {{ color1[2] }})"></div>
     </div>
      <div class="color-box" style="background-color: rgb({{ color3[0] }}, {{ color3[1] }}, {{ color3[2] }})"></div>
     <div class="boxend">
      <div class="color-box" style="background-color: rgb({{ color4[0] }}, {{ color4[1] }}, {{ color4[2] }})"></div>
    </div>
    </div>
  </div>
<br>
  Analagous Color Palette
  <div class="color-palette">
    <div class="color-color">
    <div class="box1">
      <div class="color-box" style="background-color: rgb({{ color1[0] }}, {{ color1[1] }}, {{ color1[2] }})"></div>
     </div>
      <div class="color-box" style="background-color: rgb({{ color5[0] }}, {{ color5[1] }}, {{ color5[2] }})"></div>
