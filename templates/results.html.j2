      <div class="boxend">
      <div class="color-box" style="background-color: rgb({{ color7[0] }}, {{ color7[1] }}, {{ color7[2] }})"></div>
      </div>
      </div>
  </div>
  <br>
  Square Color Palette
  <div class="color-palette">
    <div class="color-color">
    <div class="box1">
      <div class="color-box" style="background-color: rgb({{ color1[0] }}, {{ color1[1] }}, {{ color1[2] }})"></div>
      </div>
      <div class="color-box" style="background-color: rgb({{ color7[0] }}, {{ color7[1] }}, {{ color7[2] }})"></div>
      <div class="color-box" style="background-color: rgb({{ color2[0] }}, {{ color2[1] }}, {{ color2[2] }})"></div>
      <div class="boxend">
      <div class="color-box" style="background-color: rgb({{ color8[0] }}, {{ color8[1] }}, {{ color8[2] }})"></div>
   </div>
    </div>
  </div>
{% endblock %}
